<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="video_details_style">
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/text_view_margin</item>
        <item name="android:padding">@dimen/text_view_padding</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/video_details_text_size</item>
    </style>

    <style name="video_details_key_style" parent="video_details_style">
        <item name="android:textColor">@color/caption_color</item>
    </style>

</resources>
